@model MonitoreoClimatico.Architecture.Bussines.Models.WeatherAverages
@{
    ViewData["Title"] = "Weather Averages";
}

<h1>Weather Averages for @ViewData["City"]</h1>

<h2>Period 1</h2>
@if (Model.Period1Average != null)
{
    <p>Temperature: @Model.Period1Average.Temperature °C</p>
    <p>Humidity: @Model.Period1Average.Humidity %</p>
    <p>Wind Speed: @Model.Period1Average.WindSpeed m/s</p>
}
else
{
    <p>No data available for this period.</p>
}

